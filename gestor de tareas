          "text": [
            "\n",
            "--- Gestor de Tareas ---\n",
            "1. Agregar tarea\n",
            "2. Ver tareas\n",
            "3. Marcar tarea como completada\n",
            "4. Eliminar tarea\n",
            "5. Salir\n"
          ]
        }
      ],
      "source": [
        "import json\n",
        "import os\n",
        "\n",
        "ARCHIVO_TAREAS = \"tareas.json\"\n",
        "\n",
        "\n",
        "def cargar_tareas():\n",
        "    \"\"\"Carga las tareas desde un archivo JSON. Si no existe, devuelve una lista vacía.\"\"\"\n",
        "    if not os.path.exists(ARCHIVO_TAREAS):\n",
        "        return []\n",
        "\n",
        "    try:\n",
        "        with open(ARCHIVO_TAREAS, \"r\", encoding=\"utf-8\") as f:\n",
        "            tareas = json.load(f)\n",
        "            # Validamos que sea una lista\n",
        "            if isinstance(tareas, list):\n",
        "                return tareas\n",
        "            else:\n",
        "                print(\"Advertencia: el archivo de tareas está dañado. Se iniciará una lista nueva.\")\n",
        "                return []\n",
        "    except (json.JSONDecodeError, IOError):\n",
        "        print(\"Error al leer el archivo de tareas. Se iniciará una lista nueva.\")\n",
        "        return []\n",
        "\n",
        "\n",
        "def guardar_tareas(tareas):\n",
        "    \"\"\"Guarda las tareas en un archivo JSON.\"\"\"\n",
        "    try:\n",
        "        with open(ARCHIVO_TAREAS, \"w\", encoding=\"utf-8\") as f:\n",
        "            json.dump(tareas, f, ensure_ascii=False, indent=4)\n",
        "    except IOError:\n",
        "        print(\"Error al guardar las tareas. Verifica permisos y vuelve a intentar.\")\n",
        "\n",
        "\n",
        "def mostrar_menu():\n",
        "    \"\"\"Muestra el menú principal.\"\"\"\n",
        "    print(\"\\n--- Gestor de Tareas ---\")\n",
        "    print(\"1. Agregar tarea\")\n",
        "    print(\"2. Ver tareas\")\n",
        "    print(\"3. Marcar tarea como completada\")\n",
        "    print(\"4. Eliminar tarea\")\n",
        "    print(\"5. Salir\")\n",
        "\n",
        "\n",
        "def generar_nuevo_id(tareas):\n",
        "    \"\"\"Genera un ID incremental simple basado en las tareas existentes.\"\"\"\n",
        "    if not tareas:\n",
        "        return 1\n",
        "    # Tomamos el máximo ID y sumamos 1\n",
        "    max_id = max(t[\"id\"] for t in tareas)\n",
        "    return max_id + 1\n",
        "\n",
        "\n",
        "def agregar_tarea(tareas):\n",
        "    \"\"\"Agrega una nueva tarea a la lista.\"\"\"\n",
        "    descripcion = input(\"Escribe la descripción de la nueva tarea: \").strip()\n",
        "    if not descripcion:\n",
        "        print(\"La descripción no puede estar vacía.\")\n",
        "        return\n",
        "\n",
        "    nueva_tarea = {\n",
        "        \"id\": generar_nuevo_id(tareas),\n",
        "        \"descripcion\": descripcion,\n",
        "        \"completada\": False\n",
        "    }\n",
        "    tareas.append(nueva_tarea)\n",
        "    guardar_tareas(tareas)\n",
        "    print(f\"Tarea agregada con éxito (ID: {nueva_tarea['id']}).\")\n",
        "\n",
        "\n",
        "def ver_tareas(tareas):\n",
        "    \"\"\"Muestra todas las tareas con su estado.\"\"\"\n",
        "    if not tareas:\n",
        "        print(\"No hay tareas registradas.\")\n",
        "        return\n",
        "\n",
        "    print(\"\\n--- Lista de tareas ---\")\n",
        "    for tarea in tareas:\n",
        "        estado = \"Completada\" if tarea[\"completada\"] else \"Pendiente\"\n",
        "        print(f\"ID: {tarea['id']} | [{estado}] {tarea['descripcion']}\")\n",
        "\n",
        "\n",
        "def buscar_tarea_por_id(tareas, id_tarea):\n",
        "    \"\"\"Devuelve la tarea con el ID indicado o None si no existe.\"\"\"\n",
        "    for tarea in tareas:\n",
        "        if tarea[\"id\"] == id_tarea:\n",
        "            return tarea\n",
        "    return None\n",
        "\n",
        "\n",
        "def marcar_tarea_completada(tareas):\n",
        "    \"\"\"Marca una tarea como completada.\"\"\"\n",
        "    if not tareas:\n",
        "        print(\"No hay tareas para marcar.\")\n",
        "        return\n",
        "\n",
        "    ver_tareas(tareas)\n",
        "    try:\n",
        "        id_str = input(\"Ingresa el ID de la tarea a marcar como completada: \")\n",
        "        id_tarea = int(id_str)\n",
        "    except ValueError:\n",
        "        print(\"Debes ingresar un número válido.\")\n",
        "        return\n",
        "\n",
        "    tarea = buscar_tarea_por_id(tareas, id_tarea)\n",
        "    if tarea is None:\n",
        "        print(\"No se encontró una tarea con ese ID.\")\n",
        "        return\n",
        "\n",
        "    if tarea[\"completada\"]:\n",
        "        print(\"La tarea ya estaba marcada como completada.\")\n",
        "    else:\n",
        "        tarea[\"completada\"] = True\n",
        "        guardar_tareas(tareas)\n",
        "        print(\"Tarea marcada como completada.\")\n",
        "\n",
        "\n",
        "def eliminar_tarea(tareas):\n",
        "    \"\"\"Elimina una tarea de la lista.\"\"\"\n",
        "    if not tareas:\n",
        "        print(\"No hay tareas para eliminar.\")\n",
        "        return\n",
        "\n",
        "    ver_tareas(tareas)\n",
        "    try:\n",
        "        id_str = input(\"Ingresa el ID de la tarea a eliminar: \")\n",
        "        id_tarea = int(id_str)\n",
        "    except ValueError:\n",
        "        print(\"Debes ingresar un número válido.\")\n",
        "        return\n",
        "\n",
        "    tarea = buscar_tarea_por_id(tareas, id_tarea)\n",
        "    if tarea is None:\n",
        "        print(\"No se encontró una tarea con ese ID.\")\n",
        "        return\n",
        "\n",
        "    tareas.remove(tarea)\n",
        "    guardar_tareas(tareas)\n",
        "    print(\"Tarea eliminada correctamente.\")\n",
        "\n",
        "\n",
        "def main():\n",
        "    tareas = cargar_tareas()\n",
        "\n",
        "    while True:\n",
        "        mostrar_menu()\n",
        "        opcion = input(\"Elige una opción: \").strip()\n",
        "\n",
        "        if opcion == \"1\":\n",
        "            agregar_tarea(tareas)\n",
        "        elif opcion == \"2\":\n",
        "            ver_tareas(tareas)\n",
        "        elif opcion == \"3\":\n",
        "            marcar_tarea_completada(tareas)\n",
        "        elif opcion == \"4\":\n",
        "            eliminar_tarea(tareas)\n",
        "        elif opcion == \"5\":\n",
        "            print(\"Saliendo del gestor de tareas. ¡Hasta luego!\")\n",
        "            break\n",
        "        else:\n",
        "            print(\"Opción no válida. Por favor, elige un número del 1 al 5.\")\n",
        "\n",
        "\n",
        "if __name__ == \"__main__\":\n",
        "    main()"
      ]
    },
